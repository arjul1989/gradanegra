rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Reglas para eventos
    match /eventos/{eventoId}/{allPaths=**} {
      // Permitir lectura pública
      allow read: if true;
      
      // Permitir escritura a usuarios autenticados
      allow write: if request.auth != null;
    }
    
    // Reglas para comercios
    match /comercios/{comercioId}/{allPaths=**} {
      // Permitir lectura pública
      allow read: if true;
      
      // Permitir escritura a usuarios autenticados que sean dueños del comercio
      allow write: if request.auth != null;
    }
    
    // Reglas para imágenes temporales
    match /temp/{allPaths=**} {
      // Permitir lectura y escritura a usuarios autenticados
      allow read, write: if request.auth != null;
    }
  }
}
