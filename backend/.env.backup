# Environment Configuration
NODE_ENV=development
PORT=8080

# Firebase Configuration (Using Application Default Credentials)
FIREBASE_PROJECT_ID=gradanegra-prod
# FIREBASE_CLIENT_EMAIL= (not needed with ADC)
# FIREBASE_PRIVATE_KEY= (not needed with ADC)

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Email Service (Resend)
RESEND_API_KEY=re_your_resend_api_key_here

# Security
SECRET_SALT=your-secret-salt-for-ticket-hashing-change-this

# Frontend URLs
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# Google Cloud Storage
GCS_BUCKET_NAME=gradanegra-prod-tickets

# Allowed Origins (CORS)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
